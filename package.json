{
  "name": "web-chat",
  "version": "0.0.1",
  "description": "create web chat",
  "author": "Timerbayev Aynur <timerbayevaf@yandex.ru>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "copy-img": "cp -vR ./static/assets/img ./build/img",
    "before": "yarn clean && yarn copy-img",
    "dev": "yarn before && parcel static/index.html --no-source-maps --dist-dir ./build",
    "build": "yarn before && parcel build static/index.html --no-source-maps --dist-dir ./build",
    "server": "node ./server.js",
    "start": "yarn build && yarn server"
  },
  "devDependencies": {
    "@parcel/transformer-inline-string": "2.8.2",
    "@parcel/transformer-typescript-tsc": "^2.8.2",
    "parcel": "2.8.2",
    "typescript": ">=3.0.0"
  },
  "alias": {
    "components": "./src/components",
    "core": "./src/core",
    "modules": "./src/modules",
    "pages": "./src/pages",
    "utils": "./src/utils",
    "types": "./src/types",
    "constants": "./src/constants"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}
